{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "types": ["@nuxt/types", "@nuxt/schema"],
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"]
    },
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "playground/**/*"],
  "exclude": ["dist", "node_modules"]
}
